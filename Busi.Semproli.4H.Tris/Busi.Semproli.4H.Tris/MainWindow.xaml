<Window x:Class="Busi.Semproli._4H.Tris.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Busi.Semproli._4H.Tris"
        mc:Ignorable="d"
        Title="Busi.Semproli.4H.Tris" Height="500" Width="500" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="5*"></RowDefinition>
        </Grid.RowDefinitions>

        <Image Source="home.jpg" Grid.RowSpan="2" Stretch="Fill"></Image>
        
        <TextBlock Grid.Row="0" Text="TRIS" Foreground="White" FontSize="50" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="SemiBold" FontStyle="Italic"></TextBlock>

        <Button x:Name="Gioca" Click="Gioca_Click" Grid.Row="1" Height="50" Width="200" Margin="0,-100,0,0" FontSize="25" Background="Transparent" Content="GIOCA" Foreground="White"></Button>
        <Button x:Name="Storico" Click="Storico_Click" Grid.Row="1" Height="50" Width="200" Margin="0,100,0,0" FontSize="25" Background="Transparent" Content="STORICO" Foreground="White"></Button>
    </Grid>
</Window>
